<openerp>
    <data>

        <record model="ir.ui.view" id="auditfile_tree_view">
            <field name="name">auditfile.tree</field>
            <field name="model">auditfile.generate</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Financial audit exports">
                    <field name="name"/>
                    <field name="period_start"/>
                    <field name="period_stop"/>
                    <field name="state"/>
                    <field name="date_printed"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="auditfile_form_view">
            <field name="name">auditfile.form</field>
            <field name="model">auditfile.generate</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Financial audit export" version="7.0">
                    <header>
                        <button colspan="2" name="create_auditfile"
                            string="Create Auditfile" icon="gtk-apply" type="object" states="ready"/>
                        <field name="state" widget="statusbar" statusbar_visible="ready,done"/>
                    </header>
                    <sheet string="Financial audit export">
                        <h1>
                            <label string="Financial audit export"/>
                        </h1>
                        <group col="4">                       
                            <field colspan="4" name="name"/>
                        </group>
                        <group>
                            <group>
                                <field name="period_start"/>
                            </group>
                            <group>
                                <field name="period_stop"/>
                            </group>
                        </group>
                        <group col="4">
                            <separator string="Notes" colspan="4"/>                        
                            <field colspan="4" nolabel="1" name="notes" placeholder="Notes..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_auditfile_tree">
            <field name="name">Financial audit exports</field>
            <field name="res_model">auditfile.generate</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem name="XAF Audit Exports" parent="account.menu_finance_legal_statement"
            id="auditfile_menu_mainforms" action="action_auditfile_tree" />
    </data>
</openerp>
