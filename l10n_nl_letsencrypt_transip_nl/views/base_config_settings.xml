<odoo>

    <record id="view_general_configuration" model="ir.ui.view">
        <field name="name">TransIP settings</field>
        <field name="model">base.config.settings</field>
        <field name="inherit_id" ref="base_setup.view_general_configuration"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='letsencrypt_dns_provider']" position="after">
                <field
                    name="letsencrypt_transip_login"
                    string="TransIP login"
                    attrs="{
                        'required': [('letsencrypt_dns_provider', '=', 'transip')],
                        'invisible': [('letsencrypt_dns_provider', '!=', 'transip')],
                    }"/>
                <field
                    name="letsencrypt_transip_key"
                    string="TransIP key"
                    attrs="{
                        'required': [('letsencrypt_dns_provider', '=', 'transip')],
                        'invisible': [('letsencrypt_dns_provider', '!=', 'transip')],
                    }"/>
            </xpath>
        </field>
    </record>

</odoo>
