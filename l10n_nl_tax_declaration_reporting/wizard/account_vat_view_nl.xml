<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_vat_declaration_nl" model="ir.ui.view">
        <field name="model">account.vat.declaration.nl</field>
        <field name="arch" type="xml">
            <form>
                <div>
                    <p>This menu prints a tax declaration based on invoices or payments.
                        Select the date range of the fiscal year.
                        The information required for a tax declaration is automatically generated by Odoo from invoices.
                        Since data is calculated in real time, you can preview at any time the tax that you owe at the start and end of the month or quarter.
                    </p>
                </div>
                <group>
                    <group name="tax_report">
                        <field name="company_id"/>
                    </group>
                    <group name="date_range">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="create_vat" string="Print Tax Statement" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_vat_declaration_nl" model="ir.actions.act_window">
        <field name="name">Account Tax Declaration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.vat.declaration.nl</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_account_vat_declaration_nl"
        name="NL VAT Declaration"
        parent="account.menu_finance_reports"
        action="action_account_vat_declaration_nl"/>

</odoo>
